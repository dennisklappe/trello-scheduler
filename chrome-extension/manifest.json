{
  "manifest_version": 3,
  "name": "Trello Comment Scheduler",
  "version": "1.0.0",
  "description": "Schedule comments and card completion status changes in Trello",
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://trello.com/*",
    "https://*.workers.dev/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}